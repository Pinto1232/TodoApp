{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["todo.domain/*"],
      "@application/*": ["todo.application/*"],
      "@infrastructure/*": ["todo.infrastructure/*"],
      "@presentation/*": ["todo.presentation/*"],
      "@shared/*": ["todo.shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/todo.presentation/frontend"]
}
